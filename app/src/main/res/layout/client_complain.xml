<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/textView_noCooksname"
        android:layout_below="@id/editTextName"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/k2d_medium"
        android:textColor="@color/errorRed"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/textView_noPlainte"
        android:layout_below="@id/editTextTemp"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/k2d_medium"
        android:textColor="@color/errorRed"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter cook's name" />


    <EditText
        android:id="@+id/editTextTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:layout_marginTop="28dp"
        android:hint="Enter Plainte"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_noPlainte"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Add" />


    <Button
        android:id="@+id/disconnectButtonAdministrator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="147dp"
        android:layout_weight="1"
        android:onClick="onDisconnectAdministrator"
        android:text="Go Back" />





</RelativeLayout>