<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter cook's name" />


    <EditText
        android:id="@+id/editTextTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:layout_marginTop="-2dp"
        android:hint="Enter Plainte"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTemp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:text="Add" />


    <Button
        android:id="@+id/disconnectButtonAdministrator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTemp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="147dp"
        android:layout_weight="1"
        android:text="Disconnect "
        android:onClick="onDisconnectAdministrator" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addButton"
        android:text="Plaintes"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/listViewPlaintes"
        android:layout_width="match_parent"
        android:layout_height="461dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="51dp"></ListView>


</RelativeLayout>